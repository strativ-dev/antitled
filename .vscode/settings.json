{
  // Editor-specific settings for TypeScript and TypeScript React files
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.removeUnusedImports": "never"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.removeUnusedImports": "never"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Enable ESLint for comprehensive code quality checks
  "eslint.enable": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.insertSpaces": true,
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true
  },
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true
  },
  "search.exclude": {
    "**/routeTree.gen.ts": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true
  }
}
